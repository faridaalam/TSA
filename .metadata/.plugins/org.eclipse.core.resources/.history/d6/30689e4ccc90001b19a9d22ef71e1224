import com.revature.model.User;
import com.revature.repository.UserRepository;


@Repository("userRepository")
@Transactional
@RunWith(SpringJUnit5ClassRunner.class)
public class ServiceTest {
	
	@Autowired
	private SessionFactory sessionFactory;
	
	
//	 Session session;
	
	UserRepositoryImpl userImpl = new UserRepositoryImpl();
	
	@Autowired
	@Test
  void testGetUser()  {
	System.out.println("RunningUserById Test");

	
	Integer id = 1;
   
	System.out.println(UserRepositoryImpl.sessionFactory.getCurrentSession().createCriteria(User.class).add(Restrictions.like("id", id)));
	User user = userImpl.findById(id);
	 
	
	assertEquals("Farid", user.getName());
	
	
}

@Test
void testGetUsers()  {
	UserRepositoryImpl getAll = new UserRepositoryImpl();
	assert (getAll.findAll())  !=null;
}
	

}



